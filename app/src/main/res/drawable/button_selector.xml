<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the button is pressed -->
    <item android:drawable="@drawable/pressed_shape" android:state_pressed="true" />
    <!-- State when the button is focused -->
    <item android:drawable="@drawable/focused_shape" android:state_focused="true" />
    <!-- Default state -->
    <item android:drawable="@drawable/default_shape" />
</selector>
